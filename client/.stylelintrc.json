{
  "extends": [
    "stylelint-config-standard"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "plugin",
          "import",
          "tailwind",
          "apply",
          "layer",
          "config",
          "theme",
          "source",
          "utility",
          "variant",
          "custom-variant"
        ]
      }
    ],
    "import-notation": null,
    "no-invalid-position-at-import-rule": null
  }
}